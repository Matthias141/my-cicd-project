# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your actual values
# IMPORTANT: Never commit terraform.tfvars to version control!

environment = "dev"

# Sensitive variables - MUST be provided
# These should be stored securely (e.g., in AWS Secrets Manager, environment variables, or CI/CD secrets)
database_password = "your-secure-database-password-here"
api_key           = "your-secure-api-key-here"
jwt_secret        = "your-secure-jwt-secret-here"

# CORS Configuration
# IMPORTANT: Restrict to your specific domains in production
# For development, you can use ["*"] but this is NOT recommended for production
allowed_origins = ["https://yourdomain.com", "https://www.yourdomain.com"]

# Optional: Override defaults if needed
# lambda_memory = 512
# lambda_timeout = 30
# enable_provisioned_concurrency = false
# log_retention_days = 7
# api_gateway_burst_limit = 100
# api_gateway_rate_limit = 50
